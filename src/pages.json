{
  "easycom": {
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/tab/home/index",
      "style": {
        "navigationBarTitleText": "易账记",
        "navigationBarBackgroundColor": "#2979ff",
        "navigationBarTextStyle": "white",
        "enablePullDownRefresh": true,
        "onReachBottomDistance": 300
      }
    },
    {
      "path": "pages/tab/user/index",
      "style": {
        "navigationStyle": "custom"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/common",
      "pages": [
        {
          "path": "login/index",
          "navigationBarTitleText": "登录",
          "style": {
            "navigationStyle": "custom"
          }
        },
        {
          "path": "webview/index",
          "navigationBarTitleText": "网页"
        },
        {
          "path": "create-bill/index",
          "navigationBarTitleText": "创建账单"
        }
      ]
    }
  ],
  "tabBar": {
    "color": "#747474",
    "selectedColor": "#2979ff",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [{
      "pagePath": "pages/tab/home/index",
      "text": "明细",
      "iconPath": "static/tabbar/form.png",
      "selectedIconPath": "static/tabbar/form_fill.png"
    }, {
      "pagePath": "pages/tab/user/index",
      "text": "我的",
      "iconPath": "static/tabbar/my.png",
      "selectedIconPath": "static/tabbar/my_fill.png"
    }]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
